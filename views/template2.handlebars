<div class="templ2-class">

    <div id="firstSection">
      <header>
          <!-- Navbar dropdwn structure -->
          <ul id="dropdown1" class="dropdown-content">
            <li>{{userInfo.phone}}</li>
            <li>{{userInfo.email}}</li>
            <li class="divider"></li>
            <!-- Social Media Icons  -->
            <div id="socialIcons">
                <a href="https://www.facebook.com/rootnbonenyc" target="_blank">
                  <span style="font-size: 4em; color: #cddc39;">
                  <i class="fab fa-facebook-square"></i>
                </span>
                </a>
                <a href="https://www.facebook.com/rootnbonenyc" target="_blank">
                  <span style="font-size: 4em; color: #cddc39;">
                  <i class="fab fa-instagram"></i>
                </span>
                </a>
                <a href="https://www.facebook.com/rootnbonenyc" target="_blank">
                  <span style="font-size: 4em; color: #cddc39;">
                      <i class="fab fa-twitter-square"></i>
                </span>
                </a>
                <a href="https://www.facebook.com/rootnbonenyc" target="_blank">
                  <span style="font-size: 4em; color: #cddc39;">
                      <i class="fab fa-yelp"></i>
                </span>
                </a>
              </div>
          </ul>
          <ul id="dropdown2" class="dropdown-content">
            <li><a href="#!">{{userInfo.address}}</a></li>
          </ul>

          <nav id="header">
              <div class="nav-wrapper grey">
                  <img class="responsive-img" src="logo.png" alt="" id="logoImg">

                  <ul class="right hide-on-med-and-down">
                    <!-- Business address phone and email -->
                    <li><a class="dropdown-trigger grey-text lime" href="#!" data-target="dropdown1">Contact Us</a></li>
                    <li><a class="dropdown-trigger grey-text lime" href="#!" data-target="dropdown2">Location</a></li>
                  </ul>
              </div>
          </nav>
      </header>
    </div>

    <div id="secondSection" class="center">
        <h3>{{userInfo.userName}}</h3>
        {{!-- <h5 class="orange-text">HONEST SOUTHERN FOOD</h5> --}}
    </div>

    <div class="grey" id="thirdSection">
      <div class="row" id="pictureRow">
        {{#each userInfo}}
            <div class="col s4">
                <img class="materialboxed" width="400" src="{{this.pictures}}">
            </div>
        {{/each}}
      </div>
      <div class="row center" id="textRow">
        <div class="col s3 ">            
            <div class="card lime darken-1">
              <div class="card-content">
                <p>{{userInfo.aboutUs}}</p>
              </div>
            </div>        
        </div>
        <div class="col s3 offset-s1">
            <div class="card lime darken-1">
              <div class="card-content">
                <p class="card-title">Menu</p>                             
              </div>
            </div> 
        </div>
        <div class="col s3 offset-s1">
            <div class="card lime darken-1">
              <div class="card-content">
                <p class="card-title">Store Hours</p>
                    {{#each userInfo}}
                <p>{{this.schedule}}</p>
                    {{/each}}
              </div>
            </div> 
        </div>
      </div>

    </div>

  </div>
  
</div>

<script>
$(document).ready(function(){
$(".dropdown-trigger").dropdown();
});
</script>
